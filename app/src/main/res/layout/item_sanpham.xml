<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:background="@drawable/sanpham"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_Item_Anh_San_Pham"
            android:layout_width="170dp"
            android:layout_height="200sp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
        <!-- Điều chỉnh kích thước ở đây -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingEnd="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_ten_san_pham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15dp"
                android:text="ten san pham"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txt_gia_san_pham"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:text="Gia san pham "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_soluong"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:text="so luong"
                android:textStyle="bold"
                android:textSize="20sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_themvaogio"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cuttoms_btn"
                android:text="Thêm vào giỏ"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>