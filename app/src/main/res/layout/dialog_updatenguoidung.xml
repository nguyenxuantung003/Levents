<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <TextView
        android:text="SỬA THÔNG TIN KHÁCH HÀNG"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/edt_edittendangnhap"
        android:layout_marginTop="15dp"
        android:hint="Nhập tên đăng nhập"
        android:layout_width="400dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/edt_editmkdangnhap"
        android:layout_marginTop="15dp"
        android:hint="Nhập mật khẩu"
        android:layout_width="400dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/edt_edithovatendangnhap"
        android:layout_marginTop="15dp"
        android:hint="Nhập họ và tên"
        android:layout_width="400dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/edt_editemaildangnhap"
        android:layout_marginTop="15dp"
        android:hint="Nhập Email"
        android:layout_width="400dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/edt_editsdtdangnhap"
        android:layout_marginTop="15dp"
        android:hint="Nhập số điện thoại"
        android:layout_width="400dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/edt_editdiachidangnhap"
        android:layout_marginTop="15dp"
        android:hint="Nhập địa chỉ"
        android:layout_width="400dp"
        android:layout_height="40dp"/>
    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/edt_editanhdangnhap"
        android:layout_marginTop="15dp"
        android:hint="Nhập ảnh"
        android:layout_width="400dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/bt_updateKH"
        android:layout_marginTop="15dp"
        android:text="SỬA"
        android:layout_width="200dp"
        android:layout_height="40dp"/>

</LinearLayout>