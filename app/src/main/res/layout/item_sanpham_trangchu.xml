<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/sanpham"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/img_Item_Anh_San_Pham"
        android:layout_width="200dp"
        android:layout_height="170sp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/txt_ten_san_pham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5dp"
        android:text="ten san pham "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_gia_san_pham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/green"
        android:text="Gia $"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/btnThemVaoGio"
        android:layout_gravity="center"
        android:background="@drawable/cuttoms_btn"
        android:text="Thêm sản phẩm"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />
</LinearLayout>