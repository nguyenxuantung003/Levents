<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8F5E9"
    android:orientation="horizontal"
    android:layout_marginVertical="10sp">

    <ImageView
        android:id="@+id/img_spbc"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/anh_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtma_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:text="ma sản phẩm: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ten_san_pham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:text="ten loại sản phẩm: "
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtsoluongban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="5sp"
            android:text="so luong ban: "
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>