<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/khung_btn"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtChiTietSanPham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Chi tiết sản phẩm"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@color/black"
            android:id="@+id/ima_sp"
            />

        <TextView
            android:id="@+id/txtTenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8sp"
            android:text="Tên sản phẩm"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtGiaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:text="Giá"
            android:textColor="@color/red"
            android:layout_marginStart="20dp"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mota"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:id="@+id/mota_sanpham"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDongDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/khung_btn"
                android:text="Đóng"
                android:textColor="@color/teal_200" />

            <Button
                android:id="@+id/btnThemVaoGio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/khung_btn"
                android:text="Thêm vào giỏ"
                android:textColor="@color/teal_200" />
            <TextView
                android:id="@+id/txtHetHang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Đã hết hàng"
                android:layout_margin="20dp"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>