<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"
    android:background="@drawable/sanpham">
    <ImageView
        android:id="@+id/img_Item_Anh_San_Pham"
        android:layout_width="200dp"
        android:layout_height="170sp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_ten_san_pham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="Ten san pham "
        android:textSize="20sp" />
<!--    //" masanpham integer primary key autoincrement," +-->
<!--    //                " tensanpham text not null," +-->
<!--    //                " gia integer not null," +-->
<!--    //                " maloaisanpham integer REFERENCES LOAISANPHAM(maloaisanpham)," +-->
<!--    //                " mota text not null," +-->
<!--    //                " anhsanpham text not null," +-->
<!--    //                " soluong integer not null," +-->
<!--    //                " soluongbanra integer not null)";-->
    <TextView
        android:id="@+id/masp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="Mã sp "
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/giasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="Giá sản phẩm "
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/malsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="Mã loại sản phẩm "
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tenlsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="Tên loại sản phẩm "
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/mota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="Mô tả san pham "
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="SO luong san pham "
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/soluongbanra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:text="Số lượng bán ra "
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xoa"/>
        <ImageButton
            android:id="@+id/sua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sua"
            android:layout_marginLeft="260px"
            />
    </LinearLayout>

</LinearLayout>